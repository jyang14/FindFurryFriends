<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.b5.findfurryfriends.Upload"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="81dp"
            tools:showIn="@layout/activity_upload">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="not submitted"
                    android:textSize="30sp"
                    tools:layout_conversion_absoluteHeight="16dp"
                    tools:layout_conversion_absoluteWidth="87dp"
                    tools:layout_conversion_absoluteX="16dp"
                    tools:layout_conversion_absoluteY="422dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="422dp" />

                <EditText
                    android:id="@+id/nameEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Enter your pet's name..."
                    android:inputType="textPersonName"
                    tools:layout_conversion_absoluteHeight="42dp"
                    tools:layout_conversion_absoluteWidth="368dp"
                    tools:layout_conversion_absoluteX="16dp"
                    tools:layout_conversion_absoluteY="281dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="382dp" />

                <EditText
                    android:id="@+id/ageEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Enter your pet's age..."
                    android:inputType="number"
                    tools:layout_conversion_absoluteHeight="42dp"
                    tools:layout_conversion_absoluteWidth="368dp"
                    tools:layout_conversion_absoluteX="8dp"
                    tools:layout_conversion_absoluteY="128dp"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="128dp" />

                <EditText
                    android:id="@+id/breedEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Enter your pet's breed..."
                    android:inputType="textPersonName"
                    tools:layout_conversion_absoluteHeight="42dp"
                    tools:layout_conversion_absoluteWidth="368dp"
                    tools:layout_conversion_absoluteX="16dp"
                    tools:layout_conversion_absoluteY="199dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="340dp" />

                <EditText
                    android:id="@+id/infoEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Describe your pet..."
                    android:inputType="textMultiLine"
                    tools:layout_conversion_absoluteHeight="42dp"
                    tools:layout_conversion_absoluteWidth="368dp"
                    tools:layout_conversion_absoluteX="8dp"
                    tools:layout_conversion_absoluteY="55dp"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="55dp" />

                <EditText
                    android:id="@+id/animalType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="What kind of animal is your pet..."
                    android:inputType="textMultiLine"
                    tools:layout_conversion_absoluteHeight="42dp"
                    tools:layout_conversion_absoluteWidth="368dp"
                    tools:layout_conversion_absoluteX="16dp"
                    tools:layout_conversion_absoluteY="111dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="111dp" />

                <Button
                    android:id="@+id/upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="submit your pet"
                    android:textSize="18sp"
                    tools:layout_conversion_absoluteHeight="48dp"
                    tools:layout_conversion_absoluteWidth="384dp"
                    tools:layout_conversion_absoluteX="0dp"
                    tools:layout_conversion_absoluteY="378dp"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="340dp" />

            </LinearLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
